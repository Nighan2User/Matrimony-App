rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions for security
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isEmailVerified() {
      return request.auth.token.email_verified == true;
    }
    
    // User profiles - users can only access their own data
    match /users/{userId} {
      allow read, write: if isAuthenticated() && isOwner(userId) && isEmailVerified();
      
      // Allow reading basic profile info for matching (limited fields)
      allow read: if isAuthenticated() && isEmailVerified() && 
        request.auth.uid != userId; // Can't read own profile this way
    }
    
    // Public profiles for discovery/matching
    match /profiles/{profileId} {
      allow read: if isAuthenticated() && isEmailVerified();
      allow create, update: if isAuthenticated() && isOwner(profileId) && isEmailVerified();
      allow delete: if isAuthenticated() && isOwner(profileId);
    }
    
    // Matches between users
    match /matches/{matchId} {
      allow read, write: if isAuthenticated() && isEmailVerified() &&
        request.auth.uid in resource.data.participants;
      allow create: if isAuthenticated() && isEmailVerified() &&
        request.auth.uid in request.resource.data.participants;
    }
    
    // Chat messages
    match /chats/{chatId} {
      allow read, write: if isAuthenticated() && isEmailVerified() &&
        request.auth.uid in resource.data.participants;
      allow create: if isAuthenticated() && isEmailVerified() &&
        request.auth.uid in request.resource.data.participants;
        
      // Messages subcollection
      match /messages/{messageId} {
        allow read, write: if isAuthenticated() && isEmailVerified() &&
          request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;
      }
    }
    
    // User preferences and settings
    match /userSettings/{userId} {
      allow read, write: if isAuthenticated() && isOwner(userId) && isEmailVerified();
    }
    
    // Reported users/content (admin only in future)
    match /reports/{reportId} {
      allow create: if isAuthenticated() && isEmailVerified();
      // Admin read/write rules can be added later
    }
    
    // Block all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}